<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name = "AppTheme" parent = "BaseAppTheme" />

    <style name = "BaseAppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "toolbarStyle">@style/CustomToolbar</item>
        <item name = "android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>
    <style name = "AppTheme.NoActionBar">
        <item name = "windowNoTitle">true</item>
        <item name = "windowActionBar">false</item>
    </style>
    <style name = "CustomToolbar" parent = "@style/Widget.AppCompat.Toolbar">
        <item name = "android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name = "popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name = "android:fontFamily">@font/poppins_medium</item>
        <item name = "contentInsetStart">0dp</item>
        <item name = "contentInsetLeft">0dp</item>
        <item name = "contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name = "TextBasic" parent = "TextAppearance.AppCompat.Medium">
        <item name = "android:fontFamily">@font/noto_sans</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textSize">14sp</item>
    </style>
    <style name = "TextBasic.Bold">
        <item name = "android:fontFamily">@font/noto_sans_bold</item>
        <item name = "android:textStyle">bold</item>
        <item name = "android:textColor">@color/black</item>
    </style>

    <style name = "TextBasic.Italic">
        <item name = "android:fontFamily">@font/noto_sans_italic</item>
        <item name = "android:textColor">@color/black</item>
    </style>
    <style name="RecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
</resources>