<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wisato" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name = "AppTheme" parent = "BaseAppTheme" />

    <style name = "BaseAppTheme" parent = "Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/colorPrimary</item>
        <item name = "colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name = "colorAccent">@color/colorAccent</item>
        <item name = "toolbarStyle">@style/CustomToolbar</item>
        <item name = "android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>
    <style name = "AppTheme.NoActionBar">
        <item name = "windowNoTitle">true</item>
        <item name = "windowActionBar">false</item>
    </style>
    <style name = "CustomToolbar" parent = "@style/Widget.AppCompat.Toolbar">
        <item name = "android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name = "popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name = "android:fontFamily">@font/poppins_medium</item>
        <item name = "contentInsetStart">0dp</item>
        <item name = "contentInsetLeft">0dp</item>
        <item name = "contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>