<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:background="#313535"
    android:layout_height="match_parent"
    tools:context=".view.Root">
    <ImageView
        android:id="@+id/wisato_background"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wisato_icon"
        android:layout_width="170dp"
        android:layout_height="170dp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="Wisato Purwokerto"
      android:layout_below="@+id/wisato_background"
      android:textColor="@color/white"
      android:fontFamily="@font/poppins_medium"
      android:layout_centerHorizontal="true"/>
    <com.greenfrvr.rubberloader.RubberLoaderView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/loader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:loaderExtraColor="@color/fiftypercenttranparent"
        app:loaderPrimeColor="@color/colorAccent"
        app:loaderSize="tiny"
        android:layout_weight="1"
        app:loaderRippleColor="@color/colorAccent"
        app:loaderRippleMode="cycle"/>



</RelativeLayout>